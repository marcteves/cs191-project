<!DOCTYPE html>
<html>
	<head>
		<meta charset= "utf-8">
		<title>Accepted Requests</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
	
		<style type="text/css">
			body {
				background-color: #F6F6F6;
			}
			.ui.menu .item img.logo {
				margin-right: 1.5em;
			}
			.main.container {
				margin-top: 3em;
			}
			.wireframe {
				margin-top: 2em;
			}
			.ui.footer.segment {
				margin: 5em 0em 0em;
				padding: 5em 0em;
			}
		</style>
	</head>

	<body>

		<%#= stylesheet_link_tag "main" %> 

		<%= render 'layouts/header' %>
		  
		<br><br><br>
		
		<div class="ui container">
			<div class = "ui grid">
				<div class="four wide column">
					<div class = "row">
						<div class="ui card">
							<div class="content">
								<img class="ui avatar bordered circular image" src="images/yukataw.png" style="width:50px;height:50px;">
								<i class="floated edit link icon"><%= link_to 'Edit', user_view_edit_path(@user)%></i>
								<span>
									<h2 style="margin-bottom:0px"><%= @user.name %></h2>
									<div class = "right floated meta" style="color:#921517">
										<%= @user.rating %>/5.0
									</div>
									<div class="meta">
										College of Engineering
								    </div>
								</span>        
								<hr>                
								<div class="segment">
									<h4>Your Active Requests</h4>
									<% @active_requests.each do |request| %>
									   <%= render partial: 'active_accepted_request', object: request, as: 'request' %>
									<% end %>
									<% @pending_requests.each do |request| %>
									   <%= render partial: 'active_pending_request', object: request, as: 'request' %>
									<% end %>
								</div>
							</div>
							
						</div>
					</div>
					<br>
					<div class = "row">
						<div class="ui card">
							<div class="content">
								<div class="header">
									Accepted Requests
								</div>
								<hr>
								<% @accepted_requests.each do |request| %>
								   <%= render partial: 'accepted_request', object: request, as: 'request' %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			
				<div class = "eight wide column">
					<div class="ui segment">
						<div class="header">
							<h2>Requests Pool</h2>
						</div>
						<!-- <div class = "ui items"></div> -->
						<!--
						<table class="ui celled padded table">
							<thead>
								<tr>
									<th>Requester</th>
									<th>Meet-up Place</th>
									<th>Bounty</th>
									<th>Details</th>
									<th>Action</th>
								</tr>
							</thead>
							
							<tbody>-->
								<% @available_requests.each do |request| %>
								   <%= render partial: 'request', object: request %>
								<% end %>
						<!--
							</tbody>

							<tfoot>
								<tr>
									<th colspan="5">
										<div class="ui right floated pagination menu">
											<a class="icon item"><i class="left chevron icon"></i></a>
											<a class="item">1</a>
											<a class="item">2</a>
											<a class="item">3</a>
											<a class="icon item"><i class="right chevron icon"></i></a>
										</div>
									</th>
								</tr>
							</tfoot>
					    </table>
						-->
					</div>
				</div>

				<div class="four wide column">
					<div class = "ui card">
						<div class = "content">
							<div class = "header">Request Form</div>
							<br>
							
								   <%= form_for(@new_request, html: {class: 'ui form'}) do |f| %>
							<form class="ui form">
								<div class="ui required field">
											<%= f.label :title, text='Title' %>
											<%= f.text_field :title %>
								</div>

								<div class="ui required field">
											<%= f.label :location_id, text='Meet-up Place' %>
											<%= select_tag(:location_id, options_for_select([
												['Palma Hall', 1],
												['Melchor Hall', 2],
												['Engineering Library', 3],
												['College of Science Library', 4]
											], 3)) %>
										<!--
									<div class="ui simple dropdown item">
										Choose location <i class="dropdown icon"></i>
										<div class="menu">
										  <a class="item">Engineering Library 2</a>
										  <a class="item">Palma Hall</a>
										</div>
									</div>
													!-->
								</div>
								<hr>

								<div class="ui field">
											<%= f.label :item_name, text='Special Instructions' %>
											<%= f.text_field :item_name %>
								</div>
								<div class="ui field">
											<%= f.label :bounty, text='Bounty' %>
											<%= f.text_field :bounty %>
								</div>
								<br><hr>
											<%#= f.submit 'Send Request' %>
											<button class="ui primary button" type="submit">Send Request</button>
							</form>
							   <% end %>
						</div>
					</div>
				</div>
			</div>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
		</div> 
	</body>
</html>
